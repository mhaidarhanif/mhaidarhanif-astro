---
import { SITE } from '~/config.mjs';

import Layout from '~/layouts/PageLayout.astro';

import SectionHero from '~/components/widgets/SectionHero.astro';
import SectionPartners from '~/components/widgets/SectionPartners.astro';
import SectionCareer from '~/components/widgets/SectionCareer.astro';
import SectionCTA from '~/components/widgets/SectionCTA.astro';
import SectionFAQs from '~/components/widgets/SectionFAQs.astro';
import SectionJourney from '~/components/widgets/SectionJourney.astro';
import SectionStack from '~/components/widgets/SectionStack.astro';
import SectionStats from '~/components/widgets/SectionStats.astro';
import SectionValues from '~/components/widgets/SectionValues.astro';

import HighlightedPosts from '~/components/blog/HighlightedPosts.astro';

import { getCanonical, getHomePermalink } from '~/utils/permalinks';

const meta = {
	title: SITE.title,
	description: SITE.description,
	canonical: getCanonical(getHomePermalink()),
};
---

<Layout {meta}>
	<SectionHero />
	<SectionPartners />
	<SectionCareer />
	<SectionStack />
	<SectionJourney />
	<SectionValues />
	<HighlightedPosts />
	<SectionFAQs />
	<SectionStats />
	<SectionCTA />
</Layout>
