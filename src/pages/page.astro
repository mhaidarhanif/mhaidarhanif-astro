---
import Layout from '~/layouts/PageLayout.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
	title: 'Page Name',
	description: 'Page Description.',
	canonical: '/page',
};
---

<Layout {meta}>
	<section>
		<div class="max-w-6xl mx-auto px-4 sm:px-6">
			<div class="py-12 md:py-20">
				<div class="text-center pb-10 md:pb-16 max-w-5xl mx-auto">
					<h1 class="text-5xl font-medium leading-tighter tracking-tighter mb-4 font-heading">
						<span>Example</span>
						<span
							class="bg-clip-text text-transparent bg-gradient-to-r from-primary-500 to-secondary-500 sm:whitespace-nowrap"
						>
							Page
						</span>
					</h1>
					<div class="max-w-3xl mx-auto">
						<div class="mb-8 text-gray-600 dark:text-slate-400">
							<p class="text-xl mb-2">Page Example.</p>
						</div>
					</div>
				</div>
			</div>
			<div>
				<li class="hover:text-rss"></li>
				<li class="hover:text-github"></li>
				<li class="hover:text-linkedin"></li>
				<li class="hover:text-twitter"></li>
				<li class="hover:text-youtube"></li>
				<li class="hover:text-telegram"></li>
				<li class="hover:text-facebook"></li>
				<li class="hover:text-instagram"></li>
				<li class="hover:text-devto"></li>
				<li class="hover:text-hashnode"></li>
				<li class="hover:text-showwcase"></li>
				<li class="hover:text-polywork"></li>
				<li class="hover:text-cv"></li>
				<li class="hover:text-catamyst"></li>
			</div>
		</div>
	</section>

	<CallToAction />
</Layout>
