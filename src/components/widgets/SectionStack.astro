---
import { Icon } from 'astro-icon';

const dataStackItems = [
	[
		{
			title: 'General Stack',
			description:
				'JavaScript, TypeScript, Node.js/Deno/Bun, npm/yarn/pnpm, Golang, Rust, Python, Ruby, Kotlin/Java, Swift, Dart',
			icon: 'tabler:components',
		},
		{
			title: 'Frontend and UI Components',
			description:
				'Figma, HTML, CSS, JavaScript, TypeScript, Tailwind CSS, Windi CSS, React, React Router, TanStack Router, Ariakit, Radix UI, Headless UI, Jotai, Zustand, XState, Redux/RTK',
			icon: 'tabler:eye',
		},
		{
			title: 'Backend and Database',
			description: 'Express, NestJS, GraphQL Yoga, Pothos, Prisma, MySQL/MariaDB/PlanetScale, PostgreSQL/Neon/Supabase',
			icon: 'tabler:database',
		},
	],
	[
		{
			title: 'Full Stack, Web API, Testing, CI/CD',
			description:
				'Remix, Next.js, Astro, RedwoodJS, REST API, GraphQL, tRPC, gRPC, Vitest, testing-library, Playwright, GitHub Actions',
			icon: 'tabler:arrows-right-left',
		},
		{
			title: 'Deployment, Infra, Services',
			description:
				'Vercel, Netlify, Railway.app, Various Analytics, Mailjet, Google Cloud Platform (GCP), Amazon Web Services (AWS), Microsoft Azure',
			icon: 'tabler:rocket',
		},
		{
			title: 'Management, Repo, Misc',
			description:
				'Linear, Basecamp, Twist/Slack/Discord, Vim, VS Code, Markdown, Warp/iTerm2/Hyper, Git, GitHub/GitLab, esbuild, Vite, Turbopack, Turborepo, Slidev',
			icon: 'tabler:list-check',
		},
	],
];
---

<section id="features" class="scroll-mt-16">
	<div
		id="features-content"
		class="mx-auto max-w-6xl bg-primary-50 px-4 py-16 dark:bg-[#151c29] lg:rounded-xl lg:px-8 lg:py-20"
	>
		<div class="mb-10 max-w-xl sm:text-center md:mx-auto md:mb-12 lg:max-w-2xl">
			<p class="text-base font-semibold uppercase tracking-wide text-primary-700 dark:text-primary-200">
				It's Techin' Time
			</p>
			<h2 class="leading-tighter font-heading mb-4 text-4xl font-medium tracking-tighter md:text-5xl">
				<span>My Favorite</span>
				<span
					class="whitespace-nowrap bg-gradient-to-r from-primary-500 to-secondary-500 bg-clip-text text-transparent"
				>
					Stack
				</span>
			</h2>
			<p class="mx-auto max-w-3xl text-xl text-gray-600 dark:text-slate-400 sm:text-center">
				<span>Mostly using web technologies.</span>
				<a
					class="font-medium text-primary-700 dark:text-primary-300"
					target="_blank"
					rel="noopener noreferrer"
					href="https://a.catamyst.com/stack"
				>
					See complete list
				</a>
			</p>
		</div>
		<div class="mx-auto grid space-y-6 md:grid-cols-2 md:space-y-0">
			{
				dataStackItems.map((subitems) => (
					<div class="space-y-8 sm:px-8">
						{subitems.map(({ title, description, icon }) => (
							<div class="flex max-w-md flex-row">
								<div class="mb-4 mr-4">
									<div class="bg-primary-500 flex h-12 w-12 items-center justify-center rounded-xl">
										{icon && <Icon name={icon} class="h-6 w-6 text-white" />}
									</div>
								</div>
								<div>
									<h3 class="mb-2 text-xl font-medium">{title}</h3>
									<p>{description}</p>
								</div>
							</div>
						))}
					</div>
				))
			}
		</div>
	</div>
</section>
