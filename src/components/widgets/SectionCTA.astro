---
import FollowButton from '~/components/atoms/FollowButton.astro';
---

<section class="relative">
	<div class="max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-12 md:py-20">
			<div class="max-w-3xl mx-auto text-center p-10 rounded-xl bg-primary-50 dark:bg-slate-800">
				<h2 class="text-4xl md:text-4xl font-medium leading-tighter tracking-tighter mb-4 font-heading">
					Feeling adventurous?
				</h2>
				<p class="text-xl text-gray-600 dark:text-slate-400">
					<span>Let's continue on Twitter or LinkedIn or Telegram</span>
				</p>

				<div class="flex justify-center mt-6">
					<FollowButton />
				</div>
			</div>
		</div>
	</div>
</section>
